<h1>New User</h1>

<%= form_for :user, url: user_index_path do |f| %>

    <p>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
    </p>
    
    <p>
        <%= f.label :password %><br>
        <%= f.text_area :password %>
    </p>
    
    <p>
        <%= f.submit :"Create User" %>
    </p>
   
  <% end %>
