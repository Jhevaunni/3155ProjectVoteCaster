<h1>Poll Listing</h1>
<%= link_to 'Create New Poll', new_poll_url %>

<table>
    <tr>
        <th>Poll Description</th>
    </tr>
    
    <% @polls.each do |polls| %>
    <tr>
        <td><%=polls.Poll_contents %></td>
        <td><%= link_to 'Show', poll_path(polls) %></td>
        <td><%= link_to 'Edit Poll', edit_poll_path(polls) %></td>
        <td><%= link_to 'Delete Poll',
                                    poll_path(polls),
                                    method: :delete,
                                    data: {confirm: 'Are you sure?'}%></td>
    </tr>
    
    <%end%>
    
</table>